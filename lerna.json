{
  "lerna": "2.4.0",
  "packages": [
    "packages/*",
    "packages/registry/syncano/organization",
    "packages/registry/syncano/registry"
  ],
  "command": {
    "init": {
      "exact": true
    },
    "publish": {
      "exact": true,
      "ignore": [
        "@syncano/registry*"
      ]
    }
  },
  "version": "0.7.0",
  "npmClient": "yarn",
  "npmClientArgs": [
    "--production",
    "--no-optional",
    "--cache-folder .yarn-cache"
  ],
  "changelog": {
    "repo": "syncano/syncano-node",
    "labels": {
      "feature": ":rocket: Feature",
      "bug": ":bug: Bug Fix",
      "docs": ":docs: Documentation"
    },
    "cacheDir": ".changelog"
  }
}
